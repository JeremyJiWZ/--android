<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="wj.airwar.GameActivity"
    android:background="#00ffaa">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player1"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:id="@+id/player"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plane1"
        android:layout_marginLeft="470dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plane2"
        android:layout_marginLeft="560dp"
        android:layout_marginTop="30dp"
        android:clickable="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plane3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="520dp"
        android:clickable="true"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spin_right"
        android:id="@+id/spinRight"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/plane1"
        android:layout_alignEnd="@+id/plane1"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinLeft"
        android:background="@drawable/spin_left"
        android:layout_alignBottom="@+id/spinRight"
        android:layout_alignLeft="@+id/spinRight"
        android:layout_alignStart="@+id/spinRight"
        />
</RelativeLayout>
